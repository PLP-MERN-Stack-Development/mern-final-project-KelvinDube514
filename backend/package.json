{
  "name": "securepath-backend",
  "version": "1.0.0",
  "description": "Backend API for SecurePath - Real-time neighborhood safety & alert system",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "create-demo-users": "node src/scripts/createDemoUsers.js",
    "seed:incidents": "node src/scripts/generateIncidentData.js",
    "import:incidents": "node src/scripts/importProvidedIncidents.js",
    "test:dashboard": "node src/scripts/testDashboardIntegration.js"
  },
  "keywords": [
    "safety",
    "alerts",
    "neighborhood",
    "real-time",
    "security",
    "incidents"
  ],
  "author": "Kelvin Dube",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "@sentry/node": "^8.31.0"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "mongodb-memory-server": "^10.1.4"
  }
}
